<div class="content">
    <div class="box">
        <h1>Free For All OpenRCT2 Servers</h1>
        <p>
            Freely build without the need for Discord verification. Look for ffa-tycoon.com in the server browser.
        </p>
    </div>
    <div class="box">
        <h2>Servers</h2>
        <% if (servers) {
            servers.forEach(function(server){ %>
            <div class="block">
                <span class="subtitle"><%= server._name %></span>
                
                <div class="parkstats">
                    <div><span class="property">Group:</span> <%= server._group %></div>
                    <div><span class="property">Mode:</span> <%= server._mode %></div>
                    <% if (server._details) { %>
                    <div><span class="property">Scenario:</span> <%= server._details.park.name %></div>
                    <div><span class="property">Guests:</span> <%= server._details.park.guests %></div>
                    <div><span class="property">Rating:</span> <span class="<%
                        if(server._details.park.rating >= 550){
                            echo('is-success');
                        }
                        else if (server._details.park.rating > 350){
                            echo('is-warning');
                        }
                        else{
                            echo('is-danger');
                        }
                        %>"><%= server._details.park.rating %></span></div>
                    <div><span class="property">Online:</span> <%= server._details.network.players.length - 1 %></div>
                    <% } %>
                </div>
            </div>
        <% }); } %>
    </div>

    <footer>
        <div class="navbar-menu box">
            <div class="navbar-start">
                <a class="navbar-item" href="/discord">
                    Discord
                </a>
                <a class="navbar-item" href="https://status.ffa-tycoon.com/">
                    Status
                </a>
    
                <a class="navbar-item" href="https://gitlab.com/sanin.dev/ffa-tycoon">
                    Source&nbsp;Code
                </a>
            </div>
        </div>
    </footer>
</div>