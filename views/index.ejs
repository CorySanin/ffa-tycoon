<div class="content">
    <div class="box">
        <h1>Free For All OpenRCT2 Servers</h1>
        <p>
            Freely build without the need for Discord verification. Look for ffa-tycoon.com in the server browser.
        </p>
    </div>
    <div class="box">
        <h2>Servers</h2>
        <% if (servers) {
            servers.forEach(function(server){ %>
            <div class="block">
                <span class="subtitle"><%= server._name %></span>
                
                <div class="parkstats">
                    <div><span>Group:</span> <%= server._group %></div>
                    <div><span>Mode:</span> <%= server._mode %></div>
                    <% if (server._details) { %>
                    <div><span>Scenario:</span> <%= server._details.park.name %></div>
                    <div><span>Guests:</span> <%= server._details.park.guests %></div>
                    <div><span>Rating:</span> <%= server._details.park.rating %></div>
                    <div><span>Online:</span> <%= server._details.network.players.length - 1 %></div>
                    <% } %>
                </div>
            </div>
        <% }); } %>
    </div>
</div>